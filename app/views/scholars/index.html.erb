<p id="notice"><%= notice %></p>

<h1>Listing Scholars</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scholars.each do |scholar| %>
      <tr>
        <td><%= scholar.firstname %></td>
        <td><%= scholar.lastname %></td>
        <td><%= scholar.department %></td>

        <td><%= link_to 'Show', scholar %></td>
        <td><%= link_to 'Edit', edit_scholar_path(scholar) %></td>
        <td><%= link_to 'Destroy', scholar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

